@model TrainBlog.Models.Comment

@<section class="section">
	<div class="container">
		<div class="row">
			<div class="col-12">
				<article class="post">
					<h5 class="text-center mt-0 mb-5 pb-3 text-uppercase"><b>Delete Post</b></h5>
					<div class="blog-detail-description text-center">
						<p>Are you sure you want to delete this Comment?</p>
						<h2 class="post-title">Written by @Html.DisplayFor(m => m.Author.DisplayName)</h2>
						<p>@Html.DisplayFor(m => m.Body)</p>
					</div>
					<div class="form-actions text-center">
						@using (Html.BeginForm())
						{
							@Html.AntiForgeryToken()

							<input type="submit" value="Delete" class="btn btn-danger" />
						}
						<br />
						<a href="@Url.Action("Index", "Home")" class="btn btn-dark" role="button">Cancel</a>
					</div>
				</article>
			</div>
		</div>
	</div>
</section>
