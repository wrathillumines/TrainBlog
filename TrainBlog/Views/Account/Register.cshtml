@model TrainBlog.Models.RegisterViewModel

@{ 
	Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta name="description" content="A railroad photo blog created and run by a railfan.">
	<meta name="author" content="Hunter Williams">

	<link rel="shortcut icon" href="~/Images/favicon.ico">

	<title>HW Railfanning</title>

	<!-- Bootstrap core CSS -->
	<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

	<!-- Owl Carousel CSS -->
	<link href="~/Content/owl-carousel.css" rel="stylesheet" />

	<!-- Icon CSS -->
	<link href="~/Content/materialdesignicons.min.css" rel="stylesheet" />

	<!-- Custom styles for this template -->
	<link href="~/Content/style.css" rel="stylesheet" />

	<!-- Hunter's own custom styles -->
	<link href="~/Content/custom.css" rel="stylesheet" />

</head>


<body>

	<div class="logo-box">
		<a href="index.html">
			<img src="~/Images/logo.png" alt="logo" height="64">
		</a>
	</div>

	<!-- Navigation Bar-->
	<header id="topnav">

		<div class="container">
			<a href="#" class="logo-mobile">
				<img src="~/Images/logo.png" alt="logo">
			</a>
			<div class="menu-extras">
				<div class="menu-item">
					<!-- Mobile menu toggle-->
					<a class="navbar-toggle">
						<div class="lines">
							<span></span>
							<span></span>
							<span></span>
						</div>
					</a>
					<!-- End mobile menu toggle-->
				</div>
			</div>

			<div id="navigation">

				<!-- Navigation Menu-->
				<ul class="navigation-menu">

					<li>
						<a href="@Url.Action("Index", "Home")">Home</a>
					</li>

					<li>
						<a href="@Url.Action("Gallery", "BlogPosts")">Gallery</a>
					</li>

					<li>
						<a href="@Url.Action("About", "Home")">About</a>
					</li>

					<li>
						<a href="@Url.Action("Contact", "Home")">Contact</a>
					</li>

					<li class="has-submenu">
						<a href="#">Account</a>
						<span class="menu-arrow"></span>
						<ul class="submenu">
							@if (Request.IsAuthenticated)
							{
								using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
								{
									@Html.AntiForgeryToken()
									<li><a href="javascript:document.getElementById('logoutForm').submit()">Log Off</a></li>
								}
							}
							else
							{
								<li>@Html.ActionLink("Create An Account", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
								<li>@Html.ActionLink("Log In", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
							}
						</ul>
					</li>

					<li>
						<a href="javascript:void(0);" class="toggle-search" data-target="#search-wrap"><i class="mdi mdi-magnify noti-icon"></i></a>
					</li>
				</ul>
				<!-- End navigation menu-->
			</div>
		</div>
	</header>
	<!-- End Navigation Bar-->
	<!-- Search input -->
	<div class="search-wrap" id="search-wrap">
		<div class="container">
			<div class="row">
				<div class="col-sm-12">
					<div class="search-bar">
						<form>
							<input class="search-input" type="search" placeholder="Search" />
						</form>
						<a href="javascript:void(0);" class="close-search toggle-search" data-target="#search-wrap">
							<i class="mdi mdi-close-circle"></i>
						</a>
					</div>
				</div>
			</div>
		</div>
	</div>

	<section class="section">
		<div class="container">

			<div class="row justify-content-center">
				<!-- Content-->
				<div class="col-8">

					<!-- Post-->
					<article class="post">
						<h5 class="text-center mt-0 mb-5 pb-3 text-uppercase"><b>Create An Account</b></h5>

						@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { enctype = "Multipart/form-data" }))
						{
							@Html.AntiForgeryToken()

							@Html.ValidationSummary("", new { @class = "text-danger" })
							<div class="row">
								<div class="col-sm-12">
									<div class="form-group">
										@Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder = "First Name" })
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-sm-12">
									<div class="form-group">
										@Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder = "Last Name" })
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-sm-12">
									<div class="form-group">
										@Html.TextBoxFor(m => m.DisplayName, new { @class = "form-control", placeholder = "Display Name" })
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-sm-12">
									<div class="form-group">
										@Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email Address" })
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-sm-12">
									<div class="form-group">
										@Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
										<small id="passwordHelpInline" class="text-muted">
											Password must be at least 6 characters and have a lowercase letter, an uppercase letter, a number, and a symbol.
										</small>
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-sm-12">
									<div class="form-group">
										@Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Confirm Password" })
									</div>
								</div>
							</div>
							<div class="row">
								@*<div class="col-sm-3 text-right">
										<p>Get email updates?</p>
									</div>*@
								<div class="col-sm-4">
									<div class="form-group">
										@Html.LabelFor(m => m.Subscribed)
										@Html.CheckBoxFor(m => m.Subscribed)
									</div>
								</div>
								<div class="col-sm-4">
									<div class="form-group text-center">
										<input type="file" name="Avatar" id="Avatar" class="fileUpload" />
										<label for="Avatar" class="btn btn-dark">Add Avatar</label>
									</div>
								</div>
								<div class="col-sm-4">
									<div class="form-group text-right">
										<input type="submit" class="btn btn-dark" value="Register" />
									</div>
								</div>
							</div>
						}
					</article>
					<!-- Post end-->

				</div>
				<!-- Content end-->

			</div>

		</div> <!-- end container -->
	</section>

	<footer>
		<div class="copy-wrapper">
			<div class="container">
				<p class="copyright">©@DateTime.Now.Year  Hunter Williams - All Rights Reserved.</p>
				<ul class="socials right-socials">
					<li><a href="http://facebook.com/wrathillumines"><i class="mdi mdi-facebook"></i></a></li>
					<li><a href="http://twitter.com/DHunterW"><i class="mdi mdi-twitter"></i></a></li>
					<li><a href="http://instagram.com/wrathillumines"><i class="mdi mdi-instagram"></i></a></li>
				</ul>
			</div>
		</div>
		<!-- end copy-wrapper -->
	</footer>

	<!-- js placed at the end of the document so the pages load faster -->
	<script src="~/Scripts/jquery.min.js"></script>
	<script src="~/Scripts/popper.min.js"></script>
	<script src="~/Scripts/bootstrap.min.js"></script>
	<script src="~/Scripts/owl.carousel.min.js"></script>
	<!--common script for all pages-->
	<script src="~/Scripts/jquery.app.js"></script>


	<script>
		window.fbAsyncInit = function () {
			FB.init({
				appId: '{your-app-id}',
				cookie: true,
				xfbml: true,
				version: '{api-version}'
			});

			FB.AppEvents.logPageView();

		};

		(function (d, s, id) {
			var js, fjs = d.getElementsByTagName(s)[0];
			if (d.getElementById(id)) { return; }
			js = d.createElement(s); js.id = id;
			js.src = "https://connect.facebook.net/en_US/sdk.js";
			fjs.parentNode.insertBefore(js, fjs);
		}(document, 'script', 'facebook-jssdk'));
	</script>
</body>
</html>