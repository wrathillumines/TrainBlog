@model IEnumerable<TrainBlog.Models.Carousel>

<section class="section">
	<div class="container">
		<div class="row">
			<div class="col-12">
				<article class="post">
					<h5 class="text-center mt-0 mb-5 pb-3 text-uppercase"><b>Delete Carousel Images</b></h5>
					<div class="blog-detail-description text-center">
						<div class="row">
							@foreach (var image in Model)
							{
								<div class="col-4">
									<hr />
									<img src="@image.ImageUrl" class="custom-img-fluid rounded" />
									<br />
									<br />
									@Html.ActionLink("Delete", "CarouselDelete", "Home", new { id = image.Id }, new { @class = "btn btn-dark" })
								</div>
							}
						</div>
						<hr />
					</div>
				</article>
			</div>
		</div>
	</div>
</section>
