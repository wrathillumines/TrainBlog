@using PagedList;
@using PagedList.Mvc;

@model IPagedList<TrainBlog.Models.BlogPost>

<section>
    <div class="main-slider basic-slider">
        <div class="main-slide">
            <img src="~/Images/slider/slide1.jpg" alt="" />
            <div class="slide-title">
                <a class="cat-text" href="#" title="">Adventures</a>
                <h2><a href="standard-post.html" title="">Beautiful Day With Friends In Paris</a></h2>
