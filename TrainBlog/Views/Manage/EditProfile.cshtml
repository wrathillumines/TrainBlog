@model TrainBlog.Models.UserProfileViewModel
<section class="section">
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-8">
				<article class="post">
					<h5 class="text-center mt-0 mb-5 pb-3 text-uppercase"><b>Edit My Profile</b></h5>
					<div class="row">
						<div class="col-4">
							<img src="@Model.AvatarUrl" height="250" width="250" />
						</div>
						<div class="col-1"></div>
						<div class="col-7">
							@using (Html.BeginForm("EditProfile", "Manage", FormMethod.Post, new { enctype = "Multipart/form-data" }))
							{
								@Html.AntiForgeryToken()
								<div class="form-horizontal">
									@Html.ValidationSummary(true, "", new { @class = "text-danger" })
									@Html.HiddenFor(model => model.Id)
									@Html.HiddenFor(model => model.Email)
									<div class="row">
										<div class="col-sm-12">
											<div class="form-group">
												@Html.EditorFor(model => model.DisplayName, new { htmlAttributes = new { @class = "form-control", placeholder = "Display Name" } })
											</div>
										</div>
									</div>
									<div class="row">
										<div class="col-sm-12">
											<div class="form-group">
												@Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", placeholder = "First Name" } })
											</div>
										</div>
									</div>
									<div class="row">
										<div class="col-sm-12">
											<div class="form-group">
												@Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", placeholder = "Last Name" } })
											</div>
										</div>
									</div>
									<div class="row">
										<div class="col-sm-4">
											<div class="form-group">
												@Html.LabelFor(m => m.Subscribed)
												@Html.CheckBoxFor(m => m.Subscribed)
											</div>
										</div>
										<div class="col-sm-4">
											<div class="form-group text-center">
												<input type="file" name="Avatar" id="Avatar" class="fileUpload" />
												<label for="Avatar" class="btn btn-dark">Change Avatar</label>
											</div>
										</div>
										<div class="col-sm-4">
											<div class="form-group text-right">
												<input type="submit" class="btn btn-dark" value="Save" />
											</div>
										</div>
									</div>
								</div>
							}
						</div>
					</div>
				</article>
			</div>
		</div>
	</div>
</section>
